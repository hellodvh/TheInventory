<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--Script-->
    <script>
      if (window.matchMedia("(prefers-color-scheme: dark)").media === "not all") {
        document.documentElement.style.display = "none";
        document.head.insertAdjacentHTML(
          "beforeend",
          "<link id=\"css\" rel=\"stylesheet\" href=\"../dist/css/bootstrap.css\" onload=\"document.documentElement.style.display = ''\">"
        );
      }
    </script>


    <title>@ViewData["Title"] - TheInventory</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

    <!-- CSS only -->
    <!-- Load the alternate CSS first ...
         in this case the Bootstrap-Dark Variant CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css" rel="stylesheet" media="(prefers-color-scheme: dark)">
    <!-- and then the primary CSS last ...
         in this case the (original) Bootstrap Variant CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap.min.css" rel="stylesheet" media="(prefers-color-scheme: light)">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheInventory.styles.css" asp-append-version="true" />
    <!--FontAwesome Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;700&family=PT+Sans&family=PT+Serif&display=swap" rel="stylesheet">
    
</head>
<body>
    <!--Sidebar Container-->
    <div class ="sidebar-container bg-black" >
        <div class="sidebar-logo">
            <img class="logo" src="./images/logo-primary.png"/>
        </div>
        <h4 class="pb-2 text-center">The Inventory</h4>
        <ul class="sidebar-navigation">
            <li>
                <a class="nav-link" asp-area="" asp-page="/Index"><i class="fa fa-home" aria-hidden="true" style="padding-right:10px"></i>Home</a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-page="/Inventory"><i class="fa fa-cubes" aria-hidden="true" style="padding-right:10px"></i>Inventory</a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-page="/Manufacturing"><i class="fa fa-industry" aria-hidden="true" style="padding-right:10px"></i>Manufacturing</a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-page="/Assembly"><i class="fa fa-wrench" aria-hidden="true" style="padding-right:10px"></i>Assembly</a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-page="/Garage"><i class="fa fa-car" aria-hidden="true" style="padding-right:10px"></i>Garage</a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-page="/Ticket"><i class="fa fa-ticket" aria-hidden="true" style="padding-right:10px"></i>Ticket</a>
            </li>
            <li>
                <a class="nav-link" asp-area="" asp-page="/About"><i class="fa fa-info-circle" aria-hidden="true" style="padding-right:10px"></i>About</a>
            </li>      
        </ul>
    </div>
    <!--Sidebar Container End-->

    <!--Content Container-->
    <div class="content-container container-fluid" style="background-color: var(--grey-bg)">
        <main role="main" class="">
           @RenderBody() 
        </main>
    </div>
    <!--Footer-->
    <footer class="footer text-muted text-center" style="background-color: var(--grey-bg)">
        <div class="container-fluid">
            &copy; 2022 - TheInventory
        </div>
    </footer>
    <!--Footer End-->
    <!--Scripts-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>