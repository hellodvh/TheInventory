        <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
            <!--Page redirect-->
            <form method="post" asp-page="Index">
                <button type="submit" class="btn btn-cta">Manage Inventory</button>
            </form>
        </div>
      </div>
      <div class="col-lg-4  rounded-1 p-0 shadow-sm" > 
          <img class="rounded-lg-2" src="images/boxes-primary.png" alt="header image" width="300">
      </div>
    </div>
  </div>
  <!--Features Section-->
  <div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom">Features</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
